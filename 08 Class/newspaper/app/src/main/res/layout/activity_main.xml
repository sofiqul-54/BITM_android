<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abc212"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/sporsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sports"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Button" />

   <ScrollView
       android:id="@+id/sv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/sporsTV"
       android:layout_above="@id/button">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <android.support.v7.widget.CardView
               android:id="@+id/copaCard"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="Capa America"
                       android:textSize="15dp"
                       android:textStyle="bold" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="250dp"
                       android:src="@drawable/copa_america" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="@string/copa_data" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/iccWorldCV"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#abc212"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="ICC Wrold Cup"
                       android:textSize="15dp"
                       android:textStyle="bold" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="250dp"
                       android:src="@drawable/icc_world" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="@string/icc" />
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:id="@+id/sakibCV"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="Number One All Rounder "
                       android:textSize="15dp"
                       android:textStyle="bold" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="250dp"
                       android:src="@drawable/sakib" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="@string/sakib" />
               </LinearLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>
   </ScrollView>

</RelativeLayout>